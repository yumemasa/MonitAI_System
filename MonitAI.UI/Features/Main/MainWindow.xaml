<ui:FluentWindow x:Class="MonitAI.UI.Features.Main.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    mc:Ignorable="d"
    Title="monitAI" Height="760" Width="1000"
    WindowStartupLocation="CenterScreen"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    Closing="Window_Closing"
    Loaded="Window_Loaded"
    SizeChanged="Window_SizeChanged">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </Window.Resources>

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:TitleBar x:Name="MainTitleBar" Grid.Row="0" Title="monitAI" Padding="8,0">
            <ui:TitleBar.TrailingContent>
                <ui:Button Icon="{ui:SymbolIcon DarkTheme24}" 
                           Click="OnToggleThemeClick" 
                           Appearance="Transparent" 
                           ToolTip="テーマ切り替え" 
                           Margin="0,0,10,0"/>
            </ui:TitleBar.TrailingContent>
        </ui:TitleBar>

        <ui:NavigationView x:Name="RootNavigation" 
                           Grid.Row="1"
                           IsBackButtonVisible="Collapsed"
                           SelectionChanged="RootNavigation_SelectionChanged"
                           CompactPaneLength="50" 
                           OpenPaneLength="200">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="新規セッション" 
                                       Icon="{ui:SymbolIcon Add24}" 
                                       Tag="Setup"
                                       Click="NavigationViewItem_Click"/>
                <ui:NavigationViewItem Content="設定" 
                                       Icon="{ui:SymbolIcon Settings24}" 
                                       Tag="Settings"
                                       Click="NavigationViewItem_Click"/>
            </ui:NavigationView.MenuItems>
            
            <ui:NavigationView.ContentOverlay>
                <Frame x:Name="PageContent" NavigationUIVisibility="Hidden" />
            </ui:NavigationView.ContentOverlay>
        </ui:NavigationView>

        <!-- SnackbarPresenter for notifications -->
        <ui:SnackbarPresenter x:Name="RootSnackbarPresenter" Grid.Row="1" VerticalAlignment="Bottom" Margin="0,0,0,16"/>

        <!-- ContentPresenter for ContentDialog -->
        <ContentPresenter x:Name="RootContentDialogPresenter" Grid.Row="0" Grid.RowSpan="2"/>

        <ContentControl x:Name="MonitoringOverlayContainer" 
                        Grid.Row="0" Grid.RowSpan="2" 
                        Visibility="Collapsed" />
    </Grid>
</ui:FluentWindow>
