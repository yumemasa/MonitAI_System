<Page x:Class="MonitAI.UI.Features.Setup.SetupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="900"
      Loaded="Page_Loaded"
      SizeChanged="Page_SizeChanged">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>

        <!-- Card hover: Wpf.Ui 標準ブラシを使ってライト/ダーク双方で差分が出るようにする -->
        <Style x:Key="HoverableCardStyle" TargetType="{x:Type ui:CardControl}" BasedOn="{StaticResource {x:Type ui:CardControl}}">
            <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SurfaceStrokeColorDefaultBrush}"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource ControlStrokeColorDefaultBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox: テーマブラシに全面委任してライト/ダーク切替時の色ずれを防ぐ -->
        <Style x:Key="ThemedTextBoxStyle" TargetType="{x:Type ui:TextBox}" BasedOn="{StaticResource {x:Type ui:TextBox}}">
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
            <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ControlStrokeColorDefaultBrush}"/>
            <Setter Property="CaretBrush" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
            <Setter Property="SelectionBrush" Value="{DynamicResource AccentFillColorDefaultBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource ControlStrokeColorSecondaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid x:Name="SetupView" Margin="24,8,24,16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="28"/>
            <ColumnDefinition Width="340" x:Name="RightColumn"/>
        </Grid.ColumnDefinitions>

        <!-- Left -->
        <Grid Grid.Column="0" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="MonitAI" FontSize="26" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <TextBlock Grid.Row="1" Text="ルールと時間を設定して活動を始めよう！" FontSize="13"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </Grid>

                    <!-- Main Cards -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Rule -->
                        <ui:CardControl Grid.Row="0" Icon="{ui:SymbolIcon Edit24}" Header="ルール設定" Margin="0,0,0,16">
                            <Grid Margin="0,8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Goal header + Undo/Redo -->
                                <Grid Grid.Row="0" Margin="0,0,0,6">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="目標(Do)" FontWeight="Medium" VerticalAlignment="Center"/>
                                        <Border Background="#D13438" CornerRadius="3" Margin="8,0,0,0" Padding="6,1" VerticalAlignment="Center">
                                            <TextBlock Text="必須" FontSize="10" FontWeight="Bold" Foreground="White"/>
                                        </Border>

                                        <Button x:Name="UndoButton" Margin="8,0,0,0" Padding="8,4" Background="Transparent" BorderThickness="0"
                                                VerticalAlignment="Center" ToolTip="元に戻す (Ctrl+Z)" Cursor="Hand" Click="OnUndoClick" IsEnabled="False">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                                    <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Foreground" Value="{DynamicResource TextFillColorTertiaryBrush}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="&#xE7A7;" FontFamily="Segoe Fluent Icons" FontSize="12" VerticalAlignment="Center"/>
                                                <TextBlock Text="元に戻す" Margin="6,0,0,0" FontSize="12" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>

                                        <Button x:Name="RedoButton" Margin="4,0,0,0" Padding="8,4" Background="Transparent" BorderThickness="0"
                                                VerticalAlignment="Center" ToolTip="やり直す (Ctrl+Y)" Cursor="Hand" Click="OnRedoClick" IsEnabled="False">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                                    <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Foreground" Value="{DynamicResource TextFillColorTertiaryBrush}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="&#xE7A6;" FontFamily="Segoe Fluent Icons" FontSize="12" VerticalAlignment="Center"/>
                                                <TextBlock Text="やり直す" Margin="6,0,0,0" FontSize="12" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Grid>

                                <!-- Goal input -->
                                <ui:TextBox Grid.Row="1" x:Name="GoalInput" Style="{StaticResource ThemedTextBoxStyle}"
                                            PlaceholderText="例: 数学のレポート作成"
                                            AcceptsReturn="True" TextWrapping="Wrap"
                                            MinHeight="60" MaxHeight="90" VerticalContentAlignment="Top"
                                            MinWidth="310" MaxWidth="310"
                                            VerticalScrollBarVisibility="Auto"
                                            Margin="0,0,0,12"
                                            TextChanged="GoalInput_TextChanged"
                                            LostFocus="Input_LostFocus"/>

                                <!-- NG header -->
                                <Grid Grid.Row="2" Margin="0,0,0,6">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="禁止 (Don't)" FontWeight="Medium"/>
                                        <Border Background="{DynamicResource ControlFillColorSecondaryBrush}" CornerRadius="3" Margin="8,0,0,0" Padding="6,1" VerticalAlignment="Center">
                                            <TextBlock Text="任意" FontSize="10" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>

                                <!-- NG input -->
                                <ui:TextBox Grid.Row="3" x:Name="NgInput" Style="{StaticResource ThemedTextBoxStyle}"
                                            PlaceholderText="例: YouTube, SNS" Icon="{ui:SymbolIcon Prohibited24}"
                                            TextWrapping="Wrap" AcceptsReturn="True"
                                            MinHeight="60" MaxHeight="90" VerticalContentAlignment="Top"
                                            VerticalScrollBarVisibility="Auto"
                                            LostFocus="Input_LostFocus"/>
                            </Grid>
                        </ui:CardControl>

                        <!-- Timer -->
                        <ui:CardControl Grid.Row="1" Icon="{ui:SymbolIcon Timer24}" Header="タイマー設定">
                            <Grid Margin="0,8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Bottom">
                                        <TextBlock x:Name="TimeDisplay" FontSize="52" FontWeight="Bold"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}" LineHeight="52" Margin="0,-6,0,0"/>
                                        <TextBlock Text="min" FontSize="16" FontWeight="SemiBold" Margin="6,0,0,10" VerticalAlignment="Bottom"
                                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                                    </StackPanel>

                                    <Border Grid.Column="1" Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                            CornerRadius="6" Padding="10,4" VerticalAlignment="Bottom" Margin="0,0,0,8">
                                        <StackPanel Orientation="Horizontal">
                                            <ui:SymbolIcon Symbol="Clock24" FontSize="14" Margin="0,0,6,0" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock x:Name="EndTimeText" FontSize="13" FontWeight="Medium"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <Slider Grid.Row="1" x:Name="TimeSlider" Minimum="5" Maximum="180"
                                        Value="45" TickFrequency="5" IsSnapToTickEnabled="True"
                                        Margin="0,8,0,16" ValueChanged="TimeSlider_ValueChanged"/>

                                <UniformGrid Grid.Row="2" Columns="5" Rows="1" x:Name="PresetButtonsGrid">
                                    <ui:Button Content="30m" Margin="0,0,3,0" Appearance="Secondary" HorizontalAlignment="Stretch" Click="OnPresetTimeClick" Tag="30"/>
                                    <ui:Button Content="45m" Margin="3,0,3,0" Appearance="Secondary" HorizontalAlignment="Stretch" Click="OnPresetTimeClick" Tag="45"/>
                                    <ui:Button Content="60m" Margin="3,0,3,0" Appearance="Secondary" HorizontalAlignment="Stretch" Click="OnPresetTimeClick" Tag="60"/>
                                    <ui:Button x:Name="Preset90Button" Content="90m" Margin="3,0,3,0" Appearance="Secondary" HorizontalAlignment="Stretch" Click="OnPresetTimeClick" Tag="90"/>
                                    <ui:Button x:Name="Preset120Button" Content="120m" Margin="3,0,0,0" Appearance="Secondary" HorizontalAlignment="Stretch" Click="OnPresetTimeClick" Tag="120"/>
                                </UniformGrid>
                            </Grid>
                        </ui:CardControl>
                    </Grid>
                </Grid>
            </ScrollViewer>

            <!-- Start button -->
            <Grid Grid.Row="1" Margin="0,16,0,0">
                <ui:Button x:Name="StartButton" Content="目標を入力してください"
                           Icon="{ui:SymbolIcon PlayCircle24}" Appearance="Primary" Height="48" HorizontalAlignment="Stretch"
                           Click="OnStartClick" FontSize="16" FontWeight="Bold" CornerRadius="6" IsEnabled="False"/>
            </Grid>
        </Grid>

        <!-- Separator -->
        <Rectangle Grid.Column="1" Width="1" HorizontalAlignment="Center" VerticalAlignment="Stretch"
                   Fill="{DynamicResource SurfaceStrokeColorDefaultBrush}"
                   Margin="0,24" Opacity="0.5"/>

        <!-- Right list area -->
        <Grid Grid.Column="2" x:Name="RightListArea">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Expander Grid.Row="0" Margin="0,0,0,8" IsExpanded="True" x:Name="FavoritesExpander">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Star24" Foreground="#FACD15" Filled="True" Margin="0,0,8,0"/>
                        <TextBlock Text="Favorites" FontWeight="SemiBold" FontSize="15"/>
                    </StackPanel>
                </Expander.Header>

                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,8,0">
                    <ItemsControl x:Name="FavoritesList"/>
                </ScrollViewer>
            </Expander>

            <Expander Grid.Row="1" Margin="0,8,0,0" IsExpanded="True" x:Name="HistoryExpander" VerticalAlignment="Top">
                <Expander.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="History24" Margin="0,0,8,0" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="History" FontWeight="SemiBold" FontSize="15"/>
                        </StackPanel>

                        <ui:Button Grid.Column="1" Icon="{ui:SymbolIcon Delete24}" Appearance="Secondary"
                                   ToolTip="履歴をクリア" Click="OnDeleteAllHistoryClick"
                                   Padding="6,4" CornerRadius="4" BorderThickness="0"
                                   Margin="0,0,12,0"/>
                    </Grid>
                </Expander.Header>

                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,8,0">
                    <ItemsControl x:Name="HistoryList"/>
                </ScrollViewer>
            </Expander>
        </Grid>
    </Grid>
</Page>