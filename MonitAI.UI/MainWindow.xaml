<Window x:Class="MonitAI.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonitAI.UI"
        mc:Ignorable="d"
        Title="MonitAI 設定 (Launcher)" Height="700" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="基本設定" FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>

                <StackPanel Grid.Row="2" Margin="0,0,0,15">
                    <TextBlock Text="保存先フォルダ：" Margin="0,0,0,5"/>
                    <DockPanel>
                        <Button x:Name="BrowseButton" Content="参照" Width="70" Margin="5,0,0,0" Click="BrowseButton_Click" DockPanel.Dock="Right"/>
                        <TextBox x:Name="FolderPathTextBox" IsReadOnly="True" DockPanel.Dock="Left"/>
                    </DockPanel>
                </StackPanel>

                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <Button x:Name="StartButton" Content="監視開始 (Agent起動)" Width="140" Height="35" Margin="0,0,10,0" Click="StartButton_Click"/>
                    <Button x:Name="StopButton" Content="監視停止" Width="100" Height="35" IsEnabled="False" Click="StopButton_Click"/>
                </StackPanel>

                <StackPanel Grid.Row="5" Margin="0,0,0,10">
                    <TextBlock x:Name="StatusTextBlock" Text="Agent停止中" FontWeight="Bold" Foreground="Gray"/>
                </StackPanel>

                <Border Grid.Row="6" BorderBrush="LightGray" BorderThickness="1" Padding="5">
                    <TextBlock Text="※監視はバックグラウンド(Agent)で実行されます。&#x0a;※右側のログで動作状況を確認できます。&#x0a;※タスクトレイの盾アイコンからも終了できます。" 
                               TextWrapping="Wrap" FontSize="12" Foreground="DimGray"/>
                </Border>
            </Grid>
        </Border>

        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />

        <Border Grid.Column="2" BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="10,0,0,0">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top">
                    <TextBlock Text="Gemini AI 設定" FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>

                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Gemini API Key：" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="ApiKeyPasswordBox"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="モデル：" Margin="0,0,0,5"/>
                        <ComboBox x:Name="ModelComboBox" SelectedIndex="2">
                            <ComboBoxItem Content="gemini-2.5-pro"/>
                            <ComboBoxItem Content="gemini-2.5-flash"/>
                            <ComboBoxItem Content="gemini-2.5-flash-lite"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="CLI Path (gemini.cmd):" Margin="0,0,0,5"/>
                        <TextBox x:Name="CliPathTextBox" Text="C:\nvm4w\nodejs\gemini.cmd"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="目標・ルール（違反時のみ通知）：" Margin="0,0,0,5"/>
                        <TextBox x:Name="RulesTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Text="リアルタイム動作ログ (Agent):" FontWeight="Bold" Margin="0,10,0,5" DockPanel.Dock="Top"/>
                <Border BorderBrush="LightGray" BorderThickness="1" DockPanel.Dock="Top">
                    <TextBox x:Name="LogTextBox" 
                             TextWrapping="Wrap" 
                             IsReadOnly="True" 
                             BorderThickness="0" 
                             Background="#F8F8F8"
                             VerticalScrollBarVisibility="Auto"
                             FontFamily="Consolas, Meiryo UI"/>
                </Border>
            </DockPanel>
        </Border>
    </Grid>
</Window>