<Application x:Class="MonitAI.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MonitAI.UI"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>

            <!-- Windows 11 Fluent Design Color Resources -->
            <!-- These colors adapt based on the current theme -->
            
            <!-- Light Theme Colors -->
            <Color x:Key="LightApplicationBackgroundColor">#F3F3F3</Color>
            <Color x:Key="LightSolidBackgroundFillColorBaseColor">#FFFFFF</Color>
            <Color x:Key="LightTextFillColorPrimaryColor">#000000</Color>
            <Color x:Key="LightTextFillColorSecondaryColor">#605E5C</Color>
            <Color x:Key="LightTextFillColorTertiaryColor">#8A8886</Color>
            <Color x:Key="LightControlFillColorSecondaryColor">#F5F5F5</Color>
            <Color x:Key="LightSurfaceStrokeColorDefaultColor">#E1E1E1</Color>
            <Color x:Key="LightControlStrokeColorDefaultColor">#C7C7C7</Color>
            
            <!-- Dark Theme Colors (Windows 11 style - not pure black) -->
            <Color x:Key="DarkApplicationBackgroundColor">#202020</Color>
            <Color x:Key="DarkSolidBackgroundFillColorBaseColor">#2B2B2B</Color>
            <Color x:Key="DarkTextFillColorPrimaryColor">#FFFFFF</Color>
            <Color x:Key="DarkTextFillColorSecondaryColor">#C8C8C8</Color>
            <Color x:Key="DarkTextFillColorTertiaryColor">#8A8A8A</Color>
            <Color x:Key="DarkControlFillColorSecondaryColor">#19FFFFFF</Color>
            <Color x:Key="DarkSurfaceStrokeColorDefaultColor">#404040</Color>
            <Color x:Key="DarkControlStrokeColorDefaultColor">#4D4D4D</Color>

            <!-- Theme-aware Brushes -->
            <SolidColorBrush x:Key="ApplicationBackgroundBrush" Color="{DynamicResource ApplicationBackgroundColor}"/>
            <SolidColorBrush x:Key="SolidBackgroundFillColorBaseBrush" Color="{DynamicResource SolidBackgroundFillColorBaseColor}"/>
            <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="{DynamicResource TextFillColorPrimaryColor}"/>
            <SolidColorBrush x:Key="TextFillColorSecondaryBrush" Color="{DynamicResource TextFillColorSecondaryColor}"/>
            <SolidColorBrush x:Key="TextFillColorTertiaryBrush" Color="{DynamicResource TextFillColorTertiaryColor}"/>
            <SolidColorBrush x:Key="ControlFillColorSecondaryBrush" Color="{DynamicResource ControlFillColorSecondaryColor}"/>
            <SolidColorBrush x:Key="SurfaceStrokeColorDefaultBrush" Color="{DynamicResource SurfaceStrokeColorDefaultColor}"/>
            <SolidColorBrush x:Key="ControlStrokeColorDefaultBrush" Color="{DynamicResource ControlStrokeColorDefaultColor}"/>

            <!-- Accent Color (consistent across themes) -->
            <SolidColorBrush x:Key="SystemControlHighlightAccentBrush" Color="#0078D4"/>
            
            <!-- Status Colors -->
            <SolidColorBrush x:Key="SystemFillColorCriticalBrush" Color="#D13438"/>
            <SolidColorBrush x:Key="SystemFillColorSuccessBrush" Color="#107C10"/>
            <SolidColorBrush x:Key="SystemFillColorAttentionBrush" Color="#FCD116"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>