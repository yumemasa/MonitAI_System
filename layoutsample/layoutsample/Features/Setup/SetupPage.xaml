<Page x:Class="layoutsample.Features.Setup.SetupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      Loaded="Page_Loaded"
      SizeChanged="Page_SizeChanged">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </Page.Resources>

    <Grid x:Name="SetupView" Margin="24,8,24,16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="28"/>
            <ColumnDefinition Width="340" x:Name="RightColumn"/>
        </Grid.ColumnDefinitions>

        <!-- 左側: 設定エリア -->
        <Grid Grid.Column="0" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ヘッダー -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Focus Session" FontSize="26" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <TextBlock Grid.Row="1" Text="目標を決めて、集中を開始しましょう。" FontSize="13" 
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 作業ルール設定カード -->
                        <ui:CardControl Grid.Row="0" Icon="{ui:SymbolIcon Edit24}" Header="作業ルールの設定" Margin="0,0,0,16">
                            <Grid Margin="0,8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Margin="0,0,0,6">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="目標 (Do)" FontWeight="Medium"/>
                                        <Border Background="{DynamicResource SystemFillColorCriticalBrush}" CornerRadius="3" Margin="8,0,0,0" Padding="6,1" VerticalAlignment="Center">
                                            <TextBlock Text="必須" FontSize="10" FontWeight="Bold" Foreground="White"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                                <ui:TextBox Grid.Row="1" x:Name="GoalInput" 
                                            PlaceholderText="例: 数学のレポート作成" 
                                            AcceptsReturn="True" TextWrapping="Wrap" 
                                            MinHeight="60" MaxHeight="90" VerticalContentAlignment="Top"
                                            MinWidth="310" MaxWidth="310"
                                            VerticalScrollBarVisibility="Auto"
                                            Margin="0,0,0,12"
                                            TextChanged="GoalInput_TextChanged"/>

                                <Grid Grid.Row="2" Margin="0,0,0,6">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="禁止 (Don't)" FontWeight="Medium"/>
                                        <Border Background="{DynamicResource ControlFillColorSecondaryBrush}" 
                                                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                                BorderThickness="1"
                                                CornerRadius="3" Margin="8,0,0,0" Padding="6,1" VerticalAlignment="Center">
                                            <TextBlock Text="任意" FontSize="10" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                                <ui:TextBox Grid.Row="3" x:Name="NgInput" 
                                            PlaceholderText="例: YouTube, SNS" Icon="{ui:SymbolIcon Prohibited24}" 
                                            TextWrapping="Wrap" AcceptsReturn="True"
                                            MinHeight="60" MaxHeight="90" VerticalContentAlignment="Top"
                                            VerticalScrollBarVisibility="Auto"/>
                            </Grid>
                        </ui:CardControl>

                        <!-- タイマー設定カード -->
                        <ui:CardControl Grid.Row="1" Icon="{ui:SymbolIcon Timer24}" Header="タイマー設定">
                            <Grid Margin="0,8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Bottom">
                                        <TextBlock x:Name="TimeDisplay" FontSize="52" FontWeight="Bold" 
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}" LineHeight="52" Margin="0,-6,0,0"/>
                                        <TextBlock Text="min" FontSize="16" FontWeight="SemiBold" Margin="6,0,0,10" VerticalAlignment="Bottom" 
                                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                                    </StackPanel>
                                    <Border Grid.Column="1" Background="{DynamicResource ControlFillColorSecondaryBrush}" 
                                            BorderBrush="{DynamicResource SurfaceStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6" Padding="10,4" VerticalAlignment="Bottom" Margin="0,0,0,8">
                                        <StackPanel Orientation="Horizontal">
                                            <ui:SymbolIcon Symbol="Clock24" FontSize="14" Margin="0,0,6,0" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock x:Name="EndTimeText" FontSize="13" FontWeight="Medium" 
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                                <Slider Grid.Row="1" x:Name="TimeSlider" Minimum="5" Maximum="180" 
                                        Value="45"
                                        TickFrequency="5" IsSnapToTickEnabled="True"
                                        Margin="0,8,0,16"
                                        ValueChanged="TimeSlider_ValueChanged"/>

                                <!-- 5つのプリセットボタン -->
                                <UniformGrid Grid.Row="2" Columns="5" Rows="1" x:Name="PresetButtonsGrid">
                                    <ui:Button Content="30分" Margin="0,0,3,0" Appearance="Secondary" HorizontalAlignment="Stretch" Click="OnPresetTimeClick" Tag="30"/>
                                    <ui:Button Content="45分" Margin="3,0,3,0" Appearance="Secondary" HorizontalAlignment="Stretch" Click="OnPresetTimeClick" Tag="45"/>
                                    <ui:Button Content="60分" Margin="3,0,3,0" Appearance="Secondary" HorizontalAlignment="Stretch" Click="OnPresetTimeClick" Tag="60"/>
                                    <ui:Button x:Name="Preset90Button" Content="90分" Margin="3,0,3,0" Appearance="Secondary" HorizontalAlignment="Stretch" Click="OnPresetTimeClick" Tag="90"/>
                                    <ui:Button x:Name="Preset120Button" Content="120分" Margin="3,0,0,0" Appearance="Secondary" HorizontalAlignment="Stretch" Click="OnPresetTimeClick" Tag="120"/>
                                </UniformGrid>
                            </Grid>
                        </ui:CardControl>
                    </Grid>
                </Grid>
            </ScrollViewer>

            <!-- フッター固定: スタートボタン -->
            <Grid Grid.Row="1" Margin="0,16,0,0">
                <ui:Button x:Name="StartButton"
                           Content="目標を入力してください" 
                           Icon="{ui:SymbolIcon PlayCircle24}" 
                           Appearance="Primary" Height="48" HorizontalAlignment="Stretch"
                           Click="OnStartClick" FontSize="16" FontWeight="Bold" CornerRadius="6"
                           IsEnabled="False"/>
            </Grid>
        </Grid>

        <!-- 右側: リストエリア -->
        <Grid Grid.Column="2" x:Name="RightListArea">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- お気に入り: 必要な分だけ -->
                <RowDefinition Height="*"/>
                <!-- 履歴: 残り全部（これでスクロールバーが出る） -->
            </Grid.RowDefinitions>

            <!-- 上段: お気に入り -->
            <Expander Grid.Row="0" Margin="0,0,0,8" IsExpanded="True" x:Name="FavoritesExpander">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Star24" Foreground="#FACD15" Filled="True" Margin="0,0,8,0"/>
                        <TextBlock Text="Favorites" FontWeight="SemiBold" FontSize="15"/>
                    </StackPanel>
                </Expander.Header>
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300" Padding="0,0,8,0">
                    <ItemsControl x:Name="FavoritesList">
                    </ItemsControl>
                </ScrollViewer>
            </Expander>

            <!-- 下段: 履歴 -->
            <Expander Grid.Row="1" Margin="0,8,0,0" IsExpanded="True" x:Name="HistoryExpander" VerticalAlignment="Top">
                <Expander.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="History24" Margin="0,0,8,0" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="History" FontWeight="SemiBold" FontSize="15"/>
                        </StackPanel>
                        <!-- 履歴全削除ボタン -->
                        <ui:Button Grid.Column="1" 
                                   Icon="{ui:SymbolIcon Delete24}" 
                                   Appearance="Secondary" 
                                   ToolTip="履歴をすべて削除"
                                   Click="OnDeleteAllHistoryClick"
                                   Padding="6,4" 
                                   CornerRadius="4"
                                   BorderThickness="0"/>
                    </Grid>
                </Expander.Header>

                <!-- 履歴リスト本体 -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,8,0">
                    <ItemsControl x:Name="HistoryList">
                    </ItemsControl>
                </ScrollViewer>
            </Expander>

        </Grid>
    </Grid>
</Page>