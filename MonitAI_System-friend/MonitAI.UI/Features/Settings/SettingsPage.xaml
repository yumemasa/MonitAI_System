<Page x:Class="MonitAI.UI.Features.Settings.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      Loaded="Page_Loaded">

    <Grid x:Name="SettingsRoot" Margin="24,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- タイトル削除 -->

        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <!-- AI設定 -->
                <ui:CardControl Icon="{ui:SymbolIcon BrainCircuit24}" Header="AI設定" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="AIの動作モードを選択してください。" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,0,0,12"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <RadioButton x:Name="RadioCli" Content="Gemini CLI (推奨)" GroupName="AiMode" IsChecked="True" Margin="0,0,20,0"/>
                            <RadioButton x:Name="RadioApi" Content="Gemini API" GroupName="AiMode"/>
                        </StackPanel>

                        <ui:PasswordBox x:Name="ApiKeyInput" 
                                    PlaceholderText="API Key (APIモード時のみ必要)" 
                                    Icon="{ui:SymbolIcon Key24}"
                                    IsEnabled="{Binding ElementName=RadioApi, Path=IsChecked}"/>
                    </StackPanel>
                </ui:CardControl>

                <!-- モデル設定 -->
                <ui:CardControl Icon="{ui:SymbolIcon Box24}" Header="モデル設定" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="使用するGeminiモデルを選択してください。" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,0,0,12"/>
                        <ComboBox x:Name="ModelComboBox" SelectedIndex="0" MinWidth="200">
                            <ComboBoxItem Content="gemini-2.5-flash"/>
                            <ComboBoxItem Content="gemini-2.5-pro"/>
                            <ComboBoxItem Content="gemini-2.5-flash-lite"/>
                            <ComboBoxItem Content="gemini-pro-latest"/>
                            <ComboBoxItem Content="gemini-flash-latest"/>
                            <ComboBoxItem Content="gemini-flash-lite-latest"/>
                        </ComboBox>
                    </StackPanel>
                </ui:CardControl>

                <!-- 保存ボタン -->
                <ui:Button Content="設定を保存" Appearance="Primary" Icon="{ui:SymbolIcon Save24}" 
                           HorizontalAlignment="Right" Click="OnSaveClick"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
