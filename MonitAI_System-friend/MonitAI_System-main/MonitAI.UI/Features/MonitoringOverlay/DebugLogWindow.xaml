<Window x:Class="MonitAI.UI.Features.MonitoringOverlay.DebugLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agent Debug Log" Height="520" Width="720"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize" MinHeight="320" MinWidth="480">
    <Grid Background="#1E1E1E">
        <Border Background="#2A2A2A" BorderBrush="#444" BorderThickness="1" CornerRadius="8" Padding="10" Margin="12">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="LogTextBox"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="#C8F7C5"
                         FontFamily="Consolas"
                         FontSize="12"
                         AcceptsReturn="True"
                         IsReadOnly="True"
                         TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
